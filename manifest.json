{
  "manifest_version": 2,
  "name": "Apps Shortcut",
  "version": "0.1",
  "description": "Keyboard Shortcut to Chrome Apps",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "new-apps-tab": {
      "suggested_key": { "default": "Ctrl+Shift+A" },
      "description": "Open Chrome Apps in a new Tab"
    }
  }
}
